{
	"name": "tailwind-grid-block",
	"version": "0.1.0",
	"description": "Example block scaffolded with Create Block tool.",
	"author": "The WordPress Contributors",
	"license": "GPL-2.0-or-later",
	"main": "build/index.js",
	"scripts": {
		"build": "wp-scripts build --webpack-copy-php --blocks-manifest",
		"format": "wp-scripts format",
		"lint:css": "wp-scripts lint-style",
		"lint:js": "wp-scripts lint-js",
		"packages-update": "wp-scripts packages-update",
		"plugin-zip": "wp-scripts plugin-zip",
		"start": "wp-scripts start --webpack-copy-php --blocks-manifest",
		"build:tw": "npx @tailwindcss/cli --config ./tailwind.config.js -i ./src/tailwind-grid-block/plugin-tailwind.css -o ./src/tailwind-grid-block/plugin.css",
		"print:tw-config": "npx @tailwindcss/cli --config ./tailwind.config.js --print-config > ./.resolved-tw-config.json",
		"build-plugin-tailwind": "tailwindcss --config ./tailwind.config.js -i ./src/tailwind-grid-block/plugin-tailwind.css -o ./src/tailwind-grid-block/plugin.css"
	},
	"devDependencies": {
		"@tailwindcss/cli": "^4.1.14",
		"@wordpress/scripts": "^30.25.0",
		"autoprefixer": "^10.4.21",
		"postcss": "^8.5.6",
		"tailwindcss": "^4.1.14"
	}
}
